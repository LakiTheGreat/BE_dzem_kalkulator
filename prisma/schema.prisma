

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Fruit {
  id Int @id @default(autoincrement())
  label String
  isDeleted Boolean @default(false)
  Order Order[]
}

model Cup {
  id           Int       @id @default(autoincrement())
  label        String
  isDeleted    Boolean   @default(false)
  costId       Int       @unique
  valueId      Int       @unique
  cost         CupCost   @relation("CupToCost", fields: [costId], references: [id], onDelete: Restrict)
  sellingPrice CupValue  @relation("CupToValue", fields: [valueId], references: [id], onDelete: Restrict)
}

model CupCost {
  id   Int   @id @default(autoincrement())
  value Int
  label String
  cup  Cup?  @relation("CupToCost")
  isDeleted    Boolean   @default(false)
}

model CupValue {
  id   Int   @id @default(autoincrement())
  value Int
  label String
  cup  Cup?  @relation("CupToValue")
  isDeleted    Boolean   @default(false)
}

model ConfigConstant {
  id   Int   @id @default(autoincrement())
  value Int
  label String
  description String @default("")
  isDeleted    Boolean   @default(false)
}

model Order {
  id                Int      @id @default(autoincrement())
  orderTypeId       Int
  orderType         Fruit    @relation(fields: [orderTypeId], references: [id], onDelete: Restrict)
  orderName         String   @default("")
  numberOfSmallCups Int
  numberOfLargeCups Int
  totalExpense      Int
  totalValue        Int
  profit            Int
  profitMargin      Int
  createdAt         DateTime @default(now())
  isDeleted         Boolean  @default(false)
}






